<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.board.mappers.BoardMapper">
    <select id="get_all_boards" resultType="Board">
        SELECT * FROM `board`
    </select>

    <select id="get_board" resultType="Board">
        SELECT * FROM `board`
        WHERE no = #{no}
    </select>

    <insert id="write_board" parameterType="Board">
        INSERT INTO board (USERNAME, TITLE, CONTENT) VALUES
        (#{username}, #{title}, #{content})
    </insert>

    <update id="modify_board" parameterType="Board">
        UPDATE `board` SET
            title = #{title},
            content = #{content},
            count = #{count},
            modify_date = NOW()
        WHERE `no` = #{no}
    </update>
</mapper>